---
import MainLayout from "../layouts/MainLayout.astro";
import AboutSection from "../components/About/AboutSection.astro";
import AboutSectionTo from "../components/About/AboutSectionTo.astro";
import GetInspired from "../components/About/GetInspired.astro";
---

<MainLayout>
  <AboutSection />
  <AboutSectionTo />
  <GetInspired />
</MainLayout>

<script>
  document.addEventListener("DOMContentLoaded", (event) => {
    const elements = [
      document.getElementById("click_1"),
      document.getElementById("click_2"),
      document.getElementById("click_3"),
      document.getElementById("click_4"),
      document.getElementById("click_5"),
    ];

    let currentIndex = 0;
    let firstClick = true;

    const toggleButton = document
      .getElementById("toggleButton")
      .querySelector("a");

    toggleButton.addEventListener("click", (event) => {
      event.preventDefault(); // Forhindre standard klik handling

      if (firstClick) {
        firstClick = false;
        elements[1].classList.remove("hide"); // Vis click_2 ved første klik
      } else {
        // Skjul aktuelt element
        if (currentIndex < elements.length) {
          elements[currentIndex].classList.add("hide");
        }
 
        // Vis næste element
        currentIndex = (currentIndex + 1) % elements.length;
        elements[currentIndex].classList.remove("hide");
      }
    });
  });
</script>
